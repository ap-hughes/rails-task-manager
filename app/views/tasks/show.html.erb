<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed == true %>
  <input type="checkbox" checked disabled=""> Task completed</input>
<% else %>
  <input type="checkbox" disabled> Task completed</input>
<% end %>
<p><%= link_to "Delete this task?", task_path(@task), method: :delete %></p>
<p><%= link_to "Edit this task?", task_update_path(@task) %></p>
<p><%= link_to "Go back?", tasks_path %></p>
