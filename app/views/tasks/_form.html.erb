<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label "Task?" %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
  <div class="form-group">
    <%= f.label "Task completed?" %>
    <%= f.check_box :completed %>
  </div>
  <%= f.submit %>
<% end %>
